{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es6"],
		"allowJs": true,
		"strict": true,
		"module": "nodenext",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "nodenext",
		"rootDir": "./",
		"outDir": "dist"
	},
	"include": ["**/*.ts"]
}
